<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<ImageView
	    android:id="@+id/imageView1"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true"
	    android:adjustViewBounds="true"
	    android:scaleType="centerCrop"
	    android:src="@drawable/background" />
	
	<TextView
        android:id="@+id/idTitleSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:background="#ffffff"
        android:padding="5dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Detail Bill"
        android:textStyle="bold" />	

	<Button
        android:id="@+id/idButSumNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:textColor="#ffffff"
        android:background="@drawable/state_register"
        android:clickable="true"
        android:onClick="onStatus"
        android:text="Detail Status" />
	
	<ScrollView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="10dp"
	    android:layout_below="@+id/idTitleSummary"
	    android:layout_above="@+id/idButSumNext"
	    >
	    
	    <LinearLayout	        
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        >
	        
	        <LinearLayout
	            android:id="@+id/idLin7"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent"
	            android:background="@color/white"
	            android:orientation="vertical"
	            android:layout_marginBottom="10dp"
	        	>
	        	
	        	<TextView 
	        	    android:id="@+id/idText7"
	        	    android:layout_width="match_parent"
	        	    android:layout_height="wrap_content"
	        	    android:padding="5dp"
	        	    android:textStyle="bold"
	        	    android:text="Attachment"
	        	    android:textAppearance="?android:attr/textAppearanceMedium"
	        	    />

	        	<ImageView
	        	    android:id="@+id/idImgAttach"
	        	    android:layout_width="match_parent"
	        	    android:layout_height="65dp"
	        	    android:adjustViewBounds="true"
	        	    android:scaleType="centerCrop"
	        	    android:clickable="true"
	        	    android:onClick="onImgClick"
	        	    android:src="@drawable/no_image" />
	        	
	    	</LinearLayout>
	        
	        <LinearLayout
	            android:id="@+id/idLin1"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent"
	            android:background="@color/white"
	            android:orientation="vertical"
	            android:layout_marginBottom="10dp"
	        	>
	        	<TextView 
	        	    android:id="@+id/idText1"
	        	    android:layout_width="match_parent"
	        	    android:layout_height="wrap_content"
	        	    android:padding="5dp"
	        	    android:textAppearance="?android:attr/textAppearanceMedium"
	        	    />
	    	</LinearLayout>
	    	
	        <LinearLayout
	            android:id="@+id/idLinTax"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent"
	            android:background="@color/white"
	            android:orientation="vertical"
	            android:layout_marginBottom="10dp"
	        	>
	        	<TextView 
	        	    android:id="@+id/idTextTax"
	        	    android:layout_width="match_parent"
	        	    android:layout_height="wrap_content"
	        	    android:padding="5dp"
	        	    android:textAppearance="?android:attr/textAppearanceMedium"
	        	    />
	    	</LinearLayout>
	    	
	    	<LinearLayout
	            android:id="@+id/idLin2"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent"
	            android:background="@color/white"
	            android:orientation="vertical"
	            android:layout_marginBottom="10dp"
	        	>
	        	<TextView 
	        	    android:id="@+id/idText2"
	        	    android:layout_width="match_parent"
	        	    android:layout_height="wrap_content"
	        	    android:padding="5dp"
	        	    android:textAppearance="?android:attr/textAppearanceMedium"
	        	    />
	    	</LinearLayout>
	    	<LinearLayout
	            android:id="@+id/idLin3"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent"
	            android:background="@color/white"
	            android:orientation="vertical"
	            android:layout_marginBottom="10dp"
	        	>
	        	<TextView 
	        	    android:id="@+id/idText3"
	        	    android:layout_width="match_parent"
	        	    android:layout_height="wrap_content"
	        	    android:padding="5dp"
	        	    android:textAppearance="?android:attr/textAppearanceMedium"
	        	    />
	    	</LinearLayout>
	    	<LinearLayout
	            android:id="@+id/idLin4"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent"
	            android:background="@color/white"
	            android:orientation="vertical"
	            android:layout_marginBottom="10dp"
	        	>
	        	<TextView 
	        	    android:id="@+id/idText4"
	        	    android:layout_width="match_parent"
	        	    android:layout_height="wrap_content"
	        	    android:padding="5dp"
	        	    android:textAppearance="?android:attr/textAppearanceMedium"
	        	    />
	    	</LinearLayout>
	    	<LinearLayout
	            android:id="@+id/idLin5"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent"
	            android:background="@color/white"
	            android:orientation="vertical"
	            android:layout_marginBottom="10dp"
	        	>
	        	<TextView 
	        	    android:id="@+id/idText5"
	        	    android:layout_width="match_parent"
	        	    android:layout_height="wrap_content"
	        	    android:padding="5dp"
	        	    android:textAppearance="?android:attr/textAppearanceMedium"
	        	    />
	    	</LinearLayout>
	    	<LinearLayout
	            android:id="@+id/idLin6"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent"
	            android:background="@color/white"
	            android:orientation="vertical"
	            android:layout_marginBottom="10dp"
	        	>
	        	<TextView 
	        	    android:id="@+id/idText6"
	        	    android:layout_width="match_parent"
	        	    android:layout_height="wrap_content"
	        	    android:padding="5dp"
	        	    android:textStyle="bold"
	        	    android:textAppearance="?android:attr/textAppearanceMedium"
	        	    />
	    	</LinearLayout>
	    	
	    </LinearLayout>
	    
	</ScrollView>
    
</RelativeLayout>
