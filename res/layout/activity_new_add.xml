<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:alpha="0.7"
        android:background="#ffffff"
        android:padding="5dp"
        android:text="Additional fee, such as transportation fees, accomodation or others, which will be charged to all."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"
        android:textStyle="italic|bold" />
    
    <ListView 
        android:id="@+id/idListItem"
        android:layout_above="@+id/idButAddNext"
        android:layout_below="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:smoothScrollbar="true"
        >        
    </ListView>

    <Button
        android:id="@+id/idButAddNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/state_register"
	    android:textColor="#ffffff"
	    android:clickable="true"
	    android:onClick="onNext"
        android:text="Next" />
    
</RelativeLayout>
